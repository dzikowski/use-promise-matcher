{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": ["DOM", "ES5", "ES2015", "ES2015.Promise"]
    },
    "exclude": ["node_modules", "dist"]
}
